<blocks app="Snap! 4.0, http://snap.berkeley.edu" version="1">
	<block-definition s="add %&apos;x&apos; hour(s)" type="command" category="other">
		<header></header>
		<code></code>
		<inputs>
			<input type="%n"></input>
		</inputs>
		<script>
			<block s="doSetVar">
				<l>x</l>
				<block var="x"/></block>
				<block s="doUntil">
					<block s="reportEquals">
						<block var="x"/>
							<l>0</l>
						</block>
						<script>
							<block s="turn">
								<l>30</l>
							</block>
							<block s="doWait">
								<l>1</l>
							</block>
							<block s="doSetVar">
								<l>x</l>
								<block s="reportDifference">
									<block var="x"/>
										<l>1</l>
									</block>
								</block>
						</script>
					</block>
		</script>
	</block-definition>
			
			
			
			<block-definition s="subtract %&apos;x&apos; hour(s)" type="command" category="other"><header></header><code></code><inputs><input type="%n"></input></inputs><script><block s="doSetVar"><l>x</l><block var="x"/></block><block s="doUntil"><block s="reportEquals"><block var="x"/><l>0</l></block><script><block s="turnLeft"><l>30</l></block><block s="doWait"><l>1</l></block><block s="doSetVar"><l>x</l><block s="reportDifference"><block var="x"/><l>1</l></block></block></script></block></script></block-definition></blocks>